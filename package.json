{
  "name": "research-paper-analyzer",
  "version": "1.0.0",
  "description": "An application to analyze research papers and extract insights (attempt real Gemini SDK, or fallback to mock).",
  "main": "analyze_papers.js",
  "type": "module",
  "scripts": {
    "start": "node analyze_papers.js",
    "consolidate": "node consolidate_themes.js",
    "consolidate-recursive": "node consolidate_recursive.js",
    "pipeline": "node run_pipeline.js",
    "pipeline-recursive": "node run_pipeline_recursive.js",
    "view": "node view_results.js",
    "api": "node api-server.js",
    "frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run api\" \"npm run frontend\"",
    "install-frontend": "cd frontend && npm install"
  },
  "dependencies": {
    "@google/genai": "*",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "concurrently": "^8.2.0"
  }
}